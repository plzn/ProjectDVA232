<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GettingStarted" android:id="@+id/constraintLayout">


    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent" android:id="@+id/slideViewPager"
                                       app:layout_constraintBottom_toTopOf="@+id/dotsLayout">
        slideViewPager
    </android.support.v4.view.ViewPager>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="83dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dotsLayout">
    </LinearLayout>

</android.support.constraint.ConstraintLayout>