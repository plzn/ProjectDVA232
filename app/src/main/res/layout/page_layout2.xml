<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="218dp"
            android:layout_height="235dp" app:srcCompat="@drawable/compute"
            android:id="@+id/slide_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.203"/>
    <TextView
            android:text="@string/heading2"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="272dp"
            android:layout_height="29dp"
            android:id="@+id/slide_heading"
            app:layout_constraintTop_toBottomOf="@+id/slide_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.035" android:layout_marginTop="8dp"
            app:fontFamily="sans-serif-smallcaps" android:textSize="18sp"/>
    <TextView
            android:text="@string/description2"
            android:textColor="@color/white"
            android:layout_width="272dp"
            android:layout_height="64dp"
            android:id="@+id/slide_description" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/slide_heading" app:layout_constraintVertical_bias="0.01"
            app:fontFamily="sans-serif" android:textSize="16sp"/>
</android.support.constraint.ConstraintLayout>